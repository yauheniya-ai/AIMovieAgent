{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/suggest.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/suggest",
      "dest": "/api/suggest",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}